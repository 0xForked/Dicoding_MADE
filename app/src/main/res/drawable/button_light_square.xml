<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="false" android:state_activated="false"
          android:color="@color/colorTextPrimary">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/colorDivider"/>
            <corners android:radius="1dp"/>
            <solid android:color="@color/colorTextLight"/>
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true" android:color="@color/colorTextPrimary">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/colorDivider"/>
            <corners android:radius="1dp"/>
            <solid android:color="@color/colorTextLightHint"/>
        </shape>
    </item>
    <item android:state_enabled="false" android:state_pressed="false" android:color="@color/colorTextDisabled">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/colorTextDisabled"/>
            <corners android:radius="1dp"/>
            <solid android:color="@color/colorInputPrimaryDisabled"/>
        </shape>
    </item>

</selector>