<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/item_show_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_margin="@dimen/card_item_margin"
        app:cardCornerRadius="@dimen/card_item_corner_radius"
        tools:ignore="KeyboardInaccessibleWidget">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_item_image_height"
                android:id="@+id/item_show_poster"
                android:scaleType="fitXY"
                tools:src="@mipmap/ic_launcher"
                android:contentDescription="@null"/>

        <LinearLayout
                android:layout_alignParentBottom="true"
                android:padding="@dimen/card_item_title_bar_padding"
                android:background="@color/light_gray"
                android:alpha="0.8"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/item_show_ratting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_card_ratting_size"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/black_effective"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"/>
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
