<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="75dp">
                        <TextView
                                android:layout_gravity="start|center_vertical"
                                android:text="@string/my_favorite"
                                android:layout_marginStart="20dp"
                                android:textStyle="bold"
                                android:textSize="25sp"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                        <ImageButton
                                android:src="@drawable/ic_close_black_24dp"
                                android:background="@android:color/transparent"
                                android:layout_marginEnd="20dp"
                                android:id="@+id/close_button"
                                android:layout_gravity="end|center_vertical"
                                android:contentDescription="@null"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/colorAccent"/>
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="20dp"
                        android:hint="@string/favorite_movie"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:id="@+id/txt_favorite_movie_title"/>

                <androidx.recyclerview.widget.RecyclerView
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/rv_favorite_movie"
                        android:orientation="horizontal"
                        android:scrollbars="none"
                        tools:listitem="@layout/item_list_placeholder"
                        app:reverseLayout="true"/>

                <include
                        android:id="@+id/empty_movie"
                        android:visibility="gone"
                        layout="@layout/component_empty"/>

                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="20dp"
                        android:hint="@string/favorite_show"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:id="@+id/txt_favorite_show_title"/>

                <androidx.recyclerview.widget.RecyclerView
                        android:visibility="gone"
                        android:layout_marginBottom="30dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/rv_favorite_show"
                        android:scrollbars="none"
                        tools:listitem="@layout/item_list_placeholder"
                        app:reverseLayout="true"/>

                <include
                        android:id="@+id/empty_show"
                        android:visibility="gone"
                        layout="@layout/component_empty"/>

        </LinearLayout>

</androidx.core.widget.NestedScrollView>