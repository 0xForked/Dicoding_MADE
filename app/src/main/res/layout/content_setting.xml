<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_setting"
        tools:context="id.aasumitro.made.ui.setting.SettingActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                style="@style/AppTheme.Layout.Parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/button_language"
                    android:focusable="true"
                    android:clickable="true"
                    android:background="@drawable/button_light_square"
                    android:padding="@dimen/component_extra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:id="@+id/image_icon_language"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_language_gray_24dp"
                        android:contentDescription="@null"/>

                <id.aasumitro.made.utils.components.CustomTextView
                        android:layout_marginStart="@dimen/component_medium"
                        app:layout_constraintLeft_toRightOf="@id/image_icon_language"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/label_language"
                        app:base_font_style="medium"
                        android:lines="1"
                        android:textColor="@color/colorTextPrimary"
                        android:text="@string/text_language"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                <id.aasumitro.made.utils.components.CustomTextView
                        app:layout_constraintRight_toRightOf="@id/label_language"
                        app:layout_constraintLeft_toLeftOf="@id/label_language"
                        app:layout_constraintTop_toBottomOf="@id/label_language"
                        android:id="@+id/label_language_info"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="@dimen/text_small"
                        android:text="@string/text_localization"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/button_release_reminder"
                    android:background="@drawable/button_light_square"
                    android:padding="@dimen/component_extra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:id="@+id/image_icon_release_reminder"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_new_releases_gray_24dp"
                        android:contentDescription="@null"/>

                <id.aasumitro.made.utils.components.CustomTextView
                        android:layout_marginStart="@dimen/component_medium"
                        app:layout_constraintLeft_toRightOf="@id/image_icon_release_reminder"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/switch_release_reminder"
                        android:id="@+id/label_release_reminder"
                        app:base_font_style="medium"
                        android:lines="1"
                        android:textColor="@color/colorTextPrimary"
                        android:text="@string/text_release_reminder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                <id.aasumitro.made.utils.components.CustomTextView
                        app:layout_constraintRight_toLeftOf="@+id/switch_release_reminder"
                        app:layout_constraintRight_toRightOf="@id/label_release_reminder"
                        app:layout_constraintLeft_toLeftOf="@id/label_release_reminder"
                        app:layout_constraintTop_toBottomOf="@id/label_release_reminder"
                        android:id="@+id/label_release_reminder_info"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="@dimen/text_small"
                        android:text="@string/text_release_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                <Switch
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/switch_release_reminder"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/button_daily_reminder"
                    android:background="@drawable/button_light_square"
                    android:padding="@dimen/component_extra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:id="@+id/image_icon_daily_reminder"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_update_black_24dp"
                        android:contentDescription="@null"/>

                <id.aasumitro.made.utils.components.CustomTextView
                        android:layout_marginStart="@dimen/component_medium"
                        app:layout_constraintLeft_toRightOf="@id/image_icon_daily_reminder"
                        app:layout_constraintRight_toLeftOf="@+id/switch_daily_reminder"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/label_daily_reminder"
                        app:base_font_style="medium"
                        android:lines="1"
                        android:textColor="@color/colorTextPrimary"
                        android:text="@string/text_daily_reminder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                <id.aasumitro.made.utils.components.CustomTextView
                        app:layout_constraintRight_toRightOf="@id/label_daily_reminder"
                        app:layout_constraintRight_toLeftOf="@+id/switch_daily_reminder"
                        app:layout_constraintLeft_toLeftOf="@id/label_daily_reminder"
                        app:layout_constraintTop_toBottomOf="@id/label_daily_reminder"
                        android:id="@+id/label_daily_reminder_info"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="@dimen/text_small"
                        android:text="@string/text_daily_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                <Switch
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/switch_daily_reminder"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
